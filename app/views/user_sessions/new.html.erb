<div id='container'>
  <div class='lead'>
   <h1>ログイン</h1>
  </div>
  <div class='wrapper login'>
    <%= form_with url: login_path, local:true do |f| %>
      <div class='loginform'>
        <div class='form-group1'>
          <%= f.label :email, User.human_attribute_name(:email), class: 'col-sm-4 control-label' %>
          <%= f.text_field :email %>
        </div>

        <div class='form-group2'>
          <%= f.label :password, User.human_attribute_name(:password), class: 'col-sm-4 control-label' %>
          <%= f.password_field :password %>
        </div>
        
        <%= f.submit 'ログイン', class: 'btn btn-outline-danger login' %>
      </div>
    <% end %>
  </div>
</div>