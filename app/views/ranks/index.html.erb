<div id='container-user'>
  <div class='lead'>
    <h1>難易度選択</h1>
  </div>
  <% if current_page?(ranks_path(next: 'step')) %>
    <div class='row'>
      <div class='col-sm-6'>
        <div class='card'>
          <div class='card-body'>
            <h5 class='card-title'><%= @beginner.level %></h5>
            <p class='card-text'><%= @beginner.subtitle %></p>
            <%= link_to '挑戦する', login_record_rank_path(id: 1, beginner: 'all'), class:'btn btn-primary beginner' %>
          </div>
        </div>
      </div>
      <div class='col-sm-6'>
        <div class='card'>
          <div class='card-body'>
            <h5 class='card-title'><%= @intermediate.level %></h5>
            <p class='card-text'><%= @intermediate.subtitle %></p>
            <%= link_to '挑戦する', login_record_rank_path(id: 2, intermediate: 'all'), class:'btn btn-primary intermediate' %>
          </div>
        </div>
      </div>
      <div class='col-sm-6'>
        <div class='card'>
          <div class='card-body'>
            <h5 class='card-title'><%= @advanced.level %></h5>
            <p class='card-text'><%= @advanced.subtitle %></p>
            <%= link_to '挑戦する', login_record_rank_path(id: 3, advanced: 'all'), class:'btn btn-primary advanced' %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
      <div class='row'>
      <div class='col-sm-6'>
        <div class='card'>
          <div class='card-body'>
            <h5 class='card-title'><%= @beginner.level %></h5>
            <p class='card-text'><%= @beginner.subtitle %></p>
            <%= link_to '挑戦する', record_rank_path(id: 1, part: 'all', beginner: 'all'), class:'btn btn-primary beginner' %>
          </div>
        </div>
      </div>
      <div class='col-sm-6'>
        <div class='card'>
          <div class='card-body'>
            <h5 class='card-title'><%= @intermediate.level %></h5>
            <p class='card-text'><%= @intermediate.subtitle %></p>
            <%= link_to '挑戦する', record_rank_path(id: 2, part: 'all', intermediate: 'all'), class:'btn btn-primary intermediate' %>
          </div>
        </div>
      </div>
      <div class='col-sm-6'>
        <div class='card'>
          <div class='card-body'>
            <h5 class='card-title'><%= @advanced.level %></h5>
            <p class='card-text'><%= @advanced.subtitle %></p>
            <%= link_to '挑戦する', record_rank_path(id: 3, part: 'all', advanced: 'all'), class:'btn btn-primary advanced' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>