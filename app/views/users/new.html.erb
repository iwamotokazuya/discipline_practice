<div id='container-user'>
  <div class='lead'>
    <h1>ユーザー登録</h1>
  </div>
    <div class='wrapper user'>
      <%= form_with(model: @user) do |f| %>
        <div class='form-group1'>
          <%= f.label :name, class: 'col-sm-4 control-label' %>
          <%= f.text_field :name %>
        </div>
        <div class='form-group2'>
          <%= f.label :email, class: 'col-sm-4 control-label' %>
          <%= f.text_field :email %>
        </div>
        <div class='form-group3'>
          <%= f.label :password, class: 'col-sm-4 control-label' %>
          <%= f.text_field :password %>
        </div>
        <div class='form-group2'>
          <%= f.label :password_confirmation, class: 'col-sm-4 control-label' %>
          <%= f.password_field :password_confirmation %>
        </div>

        <div class='form-group3'>
          <%= f.label :images, '好きなペットの写真を※3枚まで', class: 'col-sm-6 control-label' %>
          <%= f.file_field :images, multiple: true %>
        </div>
        <div id='new-image'></div>
        <%= f.submit '登録', class: 'btn btn-outline-primary login' %>
      <% end %>
  </div>
</div>

<%= javascript_pack_tag 'preview' %>